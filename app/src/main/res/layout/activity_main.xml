<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.example.android.rugbyscore.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/TxtViewSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/TxtViewMargin"
                    android:layout_marginTop="@dimen/TxtViewMargin"
                    android:background="@color/BtnTeamBackGrnd"
                    android:paddingBottom="@dimen/TxtViewPad"
                    android:paddingVertical="@dimen/TxtViewPad"
                    android:text="@string/team_a"
                    android:textAlignment="center"
                    android:textColor="@color/BtnTeamColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/TxtViewMargin"
                    android:padding="@dimen/TeamPadding"
                    android:text="0"
                    android:textSize="@dimen/TeamTxtSize"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="tryA"
                    android:text="@string/BtnScoreTry"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="conversionA"
                    android:text="@string/BtnScoreConv"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="penaltyA"
                    android:text="@string/BtnScorePnlty"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="dropA"
                    android:text="@string/BtnScoreDrpGol"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/TxtViewSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/TxtViewMargin"
                    android:layout_marginTop="@dimen/TxtViewMargin"
                    android:background="@color/BtnTeamBackGrnd"
                    android:paddingBottom="@dimen/BtnTeamPad"
                    android:paddingVertical="@dimen/BtnTeamPad"
                    android:text="@string/team_b"
                    android:textAlignment="center"
                    android:textColor="@color/BtnTeamColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:padding="@dimen/TeamPadding"
                    android:text="0"
                    android:textSize="@dimen/TeamTxtSize"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="tryB"
                    android:text="@string/BtnScoreTry"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="conversionB"
                    android:text="@string/BtnScoreConv"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="penaltyB"
                    android:text="@string/BtnScorePnlty"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />

                <Button
                    android:layout_width="@dimen/BtnScoreSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/BtnSpace"
                    android:background="@color/BtnScoreBckgCol"
                    android:onClick="dropB"
                    android:text="@string/BtnScoreDrpGol"
                    android:textAlignment="center"
                    android:textColor="@color/BtnScoreTxtCol" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/BtnSpace"
            android:layout_marginTop="@dimen/BtnSpace"
            android:background="@color/BtnRstBg"
            android:onClick="newgame"
            android:padding="@dimen/BtnTeamPad"
            android:text="@string/BtnRst"
            android:textColor="@color/BtnRstCol"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>