<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- style for TextView name of teams -->
    <style name="TextViewNameOfTeam" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/TxtViewSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/TxtViewMargin</item>
        <item name="android:layout_marginTop">@dimen/TxtViewMargin</item>
        <item name="android:background">@color/BtnTeamBackGrnd</item>
        <item name="android:paddingBottom">@dimen/TxtViewPad</item>
        <item name="android:paddingTop">@dimen/TxtViewPad</item>
        <item name="android:textColor">@color/BtnTeamColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- style for TextView score for each team-->
    <style name="TextViewScore" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/TxtViewMargin</item>
        <item name="android:padding">@dimen/TeamPadding</item>
        <item name="android:textSize">@dimen/TeamTxtSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- style for Button Try -->
    <style name="BtnScoreTry" parent="android:style/TextAppearance">
        <item name="android:layout_width">@dimen/BtnScoreSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/BtnSpace</item>
        <item name="android:background">@color/BtnScoreBckgCol</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/BtnScoreTxtCol</item>
    </style>
    <!-- style for Button Conversion -->
    <style name="BtnScoreConv" parent="android:style/TextAppearance">
        <item name="android:layout_width">@dimen/BtnScoreSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/BtnSpace</item>
        <item name="android:background">@color/BtnScoreBckgCol</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/BtnScoreTxtCol</item>
    </style>
    <!-- style for Button Penalty -->
    <style name="BtnScorePnlty" parent="android:style/TextAppearance">
        <item name="android:layout_width">@dimen/BtnScoreSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/BtnSpace</item>
        <item name="android:background">@color/BtnScoreBckgCol</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/BtnScoreTxtCol</item>
    </style>
    <!-- style for Button Drop Goal -->
    <style name="BtnScoreDrpGol" parent="android:style/TextAppearance">
        <item name="android:layout_width">@dimen/BtnScoreSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/BtnSpace</item>
        <item name="android:background">@color/BtnScoreBckgCol</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/BtnScoreTxtCol</item>
    </style>
    <!-- style for Button Reset -->
    <style name="BtnRst" parent="android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/BtnSpace</item>
        <item name="android:layout_marginTop">@dimen/BtnSpace</item>
        <item name="android:padding">@dimen/BtnTeamPad</item>
        <item name="android:background">@color/BtnRstBg</item>
        <item name="android:textColor">@color/BtnRstCol</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
